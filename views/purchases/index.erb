<h2>Purchase History</h2>

<p><a href="/purchases/new">New Order</a></p>

<table>
  <tr>
    <th>Order Date</th>
    <!-- <th>ID</th> -->
    <th>Album</th>
    <th>Artist</th>
    <th>Quantity</th>
    <th>Cost</th>
    <th>Arrival Date</th>
  </tr>
<% @purchases.each do |purchase| %>
<tr>
  <td><%= purchase.time %></td>
  <!-- <td><%= purchase.id %></a></td> -->
  <td><a href="/purchases/<%= purchase.id %>"><%= purchase.stock.album.title %></a></td>
  <td><a href="/artists/<%= purchase.stock.album.artist.id %>"><%= purchase.stock.album.artist.name %></td>
  <td><%= purchase.quantity %></td>
  <td><%= purchase.cost %></td>
  <td><% if purchase.arrival_time %>
      <%= purchase.arrival_time %>
      <% else %>
      <form class="" action="/purchases/<%= purchase.id %>" method="POST">
      <input type="submit" value="Mark as arrived">
      <% end %>
    </form>
  </td>
<% end %>
</table>

<br>

<form class="" action="/purchases/delete" method="post">
  <input type="submit" name="" value="Delete Purchase History">
</form>
