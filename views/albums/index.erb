<h2>Albums</h2>

<p><a href="/albums/new">Add new album</a></p>

<table>
  <tr>
    <th>Title</th>
    <th>Artist</th>
    <th>Year</th>
    <th>Genre</th>
  </tr>
<% @albums.each do |album| %>
<tr>
  <td><a href="/albums/<%= album.id %>"><%= album.title %></a></td>
  <td><a href="/artists/<%= album.artist.id %>"><%= album.artist.name %></td>
  <td><%= album.year %></td>
<% end %>
</table>
