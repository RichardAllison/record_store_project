<h2>Artist details</h2>
<p>Artist: <%= @artist.name %></p>
<p>Type: <%= @artist.type %></p>
<br>
<a href="/artists/<%= @artist.id %>/edit">Update Artist</a>
<p><a href="/albums/new?artist_id=<%= @artist.id %>">Add Album by this Artist</a></p>

<form class="" action="/artists/<%= @artist.id %>/delete" method="post">
  <input type="submit" name="" value="Delete Artist">
</form>

<br>
<h2>Albums by <%= @artist.name %>:</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Genre</th>
    <th>View stock:</th>
  </tr>
  <% @albums.each do |album| %>
  <tr>
    <td><a href="/albums/<%= album.id %>"><%= album.title %></a></td>
    <td><a href="/genres/<%= album.genre.id %>"><%= album.genre.name %></a></td>
    <td><a href="/stock/<%= album.stock() %>"> Find in stock</td>
    <% end %>
  </table>
